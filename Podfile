platform :ios, '8.1'
swift_version = '3.0'

target 'SalesforceSampleApp' do
    use_frameworks!
    source 'https://github.com/forcedotcom/SalesforceMobileSDK-iOS-Specs.git'
    source 'https://github.com/CocoaPods/Specs.git'

    pod 'SalesforceSDKCore'
    pod 'SalesforceNetwork'
    pod 'SalesforceRestAPI'
    pod 'SwiftDate'
    pod 'SwiftyJSON'
    pod 'Realm'
    pod 'RealmSwift'
end

target 'TodayTaskExtension' do
    use_frameworks!
    source 'https://github.com/CocoaPods/Specs.git'
    
    pod 'SwiftDate'
    pod 'SwiftyJSON'
    pod 'Realm'
    pod 'RealmSwift'
end

target 'Model' do
    use_frameworks!
    source 'https://github.com/CocoaPods/Specs.git'
    
    pod 'SwiftDate'
    pod 'SwiftyJSON'
    pod 'Realm'
    pod 'RealmSwift'
end
